{%- style -%} 
  .section-{{ section.id }}-padding { 
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px; 
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px; 
  } 
  .section-{{ section.id }} .image-placeholder {
    width: 100%;
    height: 0;
    padding-bottom: {{ 1 | divided_by: section.settings.imagem.aspect_ratio | times: 100 }}%;
  }

  @media screen and (min-width: 750px) { 
    .section-{{ section.id }}-padding { 
      padding-top: {{ section.settings.padding_top }}px; 
      padding-bottom: {{ section.settings.padding_bottom }}px; 
    } 

    .section-{{ section.id }} .image-placeholder {
      width: 100%;
      height: 0;
      padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
    }
  } 
{%- endstyle -%}
<div class="full-width  section-{{ section.id }} section-{{ section.id }}-padding" style="display: flex; position:relative;">
  <div class="image-placeholder">
    {% if section.settings.image != blank %}
      <img class="rimage__image img-pc"
        srcset="{%- if section.settings.image.width >= 1200 -%}{{ section.settings.image | img_url: '1200x' }} 1200w,{%- endif -%}
          {%- if section.settings.image.width >= 1400 -%}{{ section.settings.image | img_url: '1400x' }} 1400w,{%- endif -%}
          {%- if section.settings.image.width >= 1600 -%}{{ section.settings.image | img_url: '1600x' }} 1600w,{%- endif -%}
          {%- if section.settings.image.width >= 1920 -%}{{ section.settings.image | img_url: '1920x' }} 1920w,{%- endif -%}
          {%- if section.settings.image.width >= 2400 -%}{{ section.settings.image | img_url: '2400x' }} 2400w,{%- endif -%}
          {%- if section.settings.image.width >= 3840 -%}{{ section.settings.image | img_url: '3840x' }} 3840w,{%- endif -%}"
        src="{{ section.settings.image | img_url: '750x' }}"
        loading="lazy"
        alt="{{ section.settings.image.alt | escape }}" >
    {% endif %}
    
    {% if section.settings.imagem != blank %}
      <img class="rimage__image img-m"
        srcset="{{ section.settings.imagem | img_url: '375x', scale: 2 }} 1x,
          {{ section.settings.imagem | img_url: '375x', scale: 3 }} 2x"
        src="{{ section.settings.imagem | img_url: '750x' }}"
        loading="lazy"
        alt="{{ section.settings.imagem.alt | escape }}" >
    {% endif %}
  </div>
  {% if section.settings.html != blank %}
    {{ section.settings.html }}
  {% endif %}
</div>


<style>
  .image-placeholder{
    overflow: hidden;
  }
  {% comment %} pc {% endcomment %}
  @media (min-width: 750px) {
    .img-m{
      display:none;
    }
    .img-pc{
      width:100%;
    }
  }
  {% comment %} ph {% endcomment %}
  @media (max-width: 749px) {
    .img-pc{
      display:none;
    }
    .img-m{
      width:100%;
    }
  }
</style>


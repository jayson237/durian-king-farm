<div class="counter-container">
  <h2>Counter: <span id="counter-value">0</span></h2>
  <button id="counter-button">Increment</button>
</div>

{% style %}
  .counter-container {
    padding: 5%;
    text-align: center;
  }
  #counter-button {
    background-color: #28a745;
    color: white;
    border: 2px solid #28a745;
    padding: 12px 24px;
    font-size: 18px;
    cursor: pointer;
    border-radius: 8px;
    margin-top: 10px;
    transition:
      background-color 0.3s,
      border-color 0.3s;
  }
  #counter-button:hover {
    background-color: #218838;
    border-color: #1e7e34;
  }
{% endstyle %}

<script src="{{ 'counter.js' | asset_url }}" defer="defer"></script>

